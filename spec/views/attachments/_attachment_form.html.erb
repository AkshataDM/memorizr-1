require 'spec_helper'

describe 'attachments/_attachment_form.html.erb' do
  before do 
    @tag = double('tag', name: 'tag name')
    @folder = mock_model(Folder)
    @attachment = mock_model(Attachment, body: '',
                             tags: [@tag], folder: @folder)
    view.stub(:current_user).and_return(mock_model(User))
  end 

  def do_render
    render partial: 'attachment_form', object: @attachment
  end

  it 'should render' do 
    do_render
    rendered.should have_selector('form')
  end 
end
